{% extends "base.html.twig" %}

{% block title %} {{program.title}} {% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-3">Saison {{season.number}} de {{program.title}} </h1> 
    <hr>
    <p> {{season.description }} </p> 
    <ul class="list-unstyled">  
    {% for episode in season.episodes %}
          <li><a href="{{ path("program_episode_show", {"program_slug": program.slug, "season_id": season.id,
                        "episode_slug": episode.slug})}}" class="text-decoration-none">Episode {{episode.number}} : {{episode.title}}</a>  </li>
    {% endfor %} 
    </ul> 
</div>
{% endblock %}