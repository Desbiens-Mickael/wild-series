{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-3">Toutes les séries de la catégorie {{ category.name }} : </h1>
        {% for program in programs %}
            <div class="mt-5">
                <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                <p>{{ program.synopsis }}</p>
                {# Lien vers la fiche de la série : #}
                <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}

        <a href="{{ path('home_index') }}">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}